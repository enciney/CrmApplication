@model  CrmApplication.Models.Employee
@{
}

<h2>Login</h2>


@using (Html.BeginForm("Login", "Security", FormMethod.Post))
{
	if (ViewBag.Message != null)
	{
		<span class="badge badge-danger">@ViewBag.Message</span>
	}

	<div class="card-body">
		<div class="form-group">
			@Html.LabelFor(m => m.UserName)
			@Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "First Name" })
			@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Password)
			@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
			@Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
		</div>

		<div class="form-group">
			<input type="submit" name="submit" class="btn btn-danger" value="Login" />
		</div>
	</div>
}
